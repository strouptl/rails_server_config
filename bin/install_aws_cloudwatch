#!/bin/bash

# Get package
wget https://s3.amazonaws.com/amazoncloudwatch-agent/ubuntu/amd64/latest/amazon-cloudwatch-agent.deb -P ~

# Install packe
sudo dpkg -i -E ~/amazon-cloudwatch-agent.deb

# Update config file
sudo cp config_files/aws/amazon-cloudwatch-agent.json /opt/aws/amazon-cloudwatch-agent/etc/

# Enable and start service
sudo systemctl enable amazon-cloudwatch-agent
sudo service amazon-cloudwatch-agent start
